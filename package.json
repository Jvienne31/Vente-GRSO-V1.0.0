{
  "name": "ventes-grso",
  "version": "1.0.0",
  "description": "Syst√®me de point de vente et gestion d'inventaire pour Ventes GRSO.",
  "main": "electron.cjs",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "electron": "vite build && electron .",
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "npm run build && electron-builder --win",
    "electron:dist": "electron-builder --win"
  },
  "author": "GRSO",
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.1"
  },
  "build": {
    "appId": "com.ventes.grso",
    "productName": "Ventes GRSO",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "immer": "^10.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  }
}
